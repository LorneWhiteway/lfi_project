#!/bin/bash

# Based on information at https://epcced.github.io/dirac-docs/tursa-user-guide/scheduler/
# 4-GPU HIGH RESOLUTION test (nGrid=2025 vs baseline nGrid=1350)

# Slurm job options
#SBATCH --job-name=4gpu_hires
#SBATCH --time=12:00:00
#SBATCH --account=DP327-high
#SBATCH --mail-user=lorne.whiteway@star.ucl.ac.uk
#SBATCH --mail-type=FAIL
#SBATCH --export=none

#SBATCH --nodes=1
#SBATCH --ntasks=4
#SBATCH --ntasks-per-node=4
#SBATCH --cpus-per-task=12
#SBATCH --partition=gpu-a100-80
#SBATCH --qos=high
#SBATCH --gres=gpu:4
#SBATCH --mem=480000
#SBATCH --hint=multithread

export OMP_NUM_THREADS=${SLURM_CPUS_PER_TASK}

source /mnt/lustre/tursafs1/home/dp327/dp327/shared/lfi_project/set_environment_tursa.sh USE

# Change to the test directory
cd /mnt/lustre/tursafs1/home/dp327/dp327/shared/lfi_project/experiments/multi_gpu_test/

# Run pkdgrav3 with 4 MPI ranks using the HIGH RESOLUTION control file
echo "Starting 4-GPU HIGH-RES run at $(date)"
echo "Using $SLURM_NTASKS MPI tasks with $OMP_NUM_THREADS threads each"
echo "Resolution: nGrid=2025 (1.5x baseline)"

srun /mnt/lustre/tursafs1/home/dp327/dp327/shared/lfi_project/pkdgrav3/build_tursa/pkdgrav3 ./control_highres.par > ./output_4gpu_highres.txt 2>&1

echo "Finished 4-GPU HIGH-RES run at $(date)"

